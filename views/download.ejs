<%- include("partials/header.ejs") %>



<div class="container mt-3 col-xl-5 col-lg-8 col-12">



  <form class="my-5 pt-3" action="/convertNext"  method="Get">
    <div class="d-flex align-items-center justify-content-between">
      <h5>Download mp3:</h5>
      <button class="btn btn-secondary" type="submit">Convert Next</button>
  </div>
  
    </form> 


  <% if((locals.songList.length) == 0 ) {%>
    <h2>No song yet</h2>
  <%} else {%>
    <% songList.forEach(song=> { %>
  

            <div class="card border shadow-none">
                <div class="card-body d-flex align-items-start pb-3">
                    <div class="me-4">
                        <img src="<%= song.thumbnail %>" alt="" class="thumbnail">
                    </div>
                    <div class="flex-grow-1 align-self-center overflow-hidden">
                        <div>
                            <h5 class="text-truncate font-size-18"><%= song.title %></h5>
                            <p class="mb-0 mt-1"><b><%= song.duration %></b></p>
                        </div>
                    </div>
                    <div class="flex-shrink-0 ms-2">
                        <ul class="list-inline mb-0 font-size-16">
                            <li class="list-inline-item">

                              

                              <a style="text-decoration: none;" href="/download/<%= encodeURIComponent(song.title) %>">
                                <input class="btn  btn-outline-primary" value="Download">
                              </a>

                                <div id="loadingScreen" >

                                    <div class="text-center">
                                      <h2 id="load-text"></h2>
                              
                                        <div id="spinner"  role="status">
                              
                                        </div>
                                    </div>
                                  </div>
                              
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
    <% }); %>
    
      

  <%}%>

    
  
  
</div>





<%- include("partials/footer.ejs") %>
